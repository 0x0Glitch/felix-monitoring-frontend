# Database Configuration
NEXT_PUBLIC_DATABASE_URL=your-database-url-here

# Market Configuration
# The default market to display when no market is specified
# Format: dex:symbol (e.g., xyz:XYZ100, flxn:TSLA)
NEXT_PUBLIC_DEFAULT_MARKET=xyz:XYZ100

# Market Data Schema and Table
NEXT_PUBLIC_MARKET_SCHEMA=market_data
# Table name should match the market format: {dex}_{market}_data
# For xyz:XYZ100, use: xyz_xyz100_data
# For flxn:TSLA, use: flxn_tsla_data
NEXT_PUBLIC_MARKET_TABLE=xyz_xyz100_data

# User Positions Configuration (if needed)
NEXT_PUBLIC_POSITIONS_SCHEMA=user_positions
NEXT_PUBLIC_POSITIONS_TABLE=xyz_xyz100_positions
